{
  "root": true,
  "extends": [
    "next/core-web-vitals",
  ],
  "plugins": [
    "react",
    "@next/eslint-plugin-next"
  ],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "react/react-in-jsx-scope": "off", 
    "no-unused-vars": "warn", 
    "react/prop-types": "off", 
    "no-console": "warn", 
    "@next/next/no-img-element": "off",
    "indent": ["error", 2] 
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
